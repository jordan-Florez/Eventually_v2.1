<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/fragment_Registro"
        android:name="cursos.alain.eventually_v2.Fragments.RegistroFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"

        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:fontFamily="@font/amiko"
        android:text="@string/Registro"
        android:textColor="@color/colorAzul_Sutilmenos2"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/Txt_Documento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:fontFamily="@font/amiko"
            android:hint="@string/Documento"
            android:inputType="textPersonName"
            android:textColor="@color/colorAzul_Sutil"
            android:textColorHint="@color/colorAzul_Sutil"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/Txt_Usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:fontFamily="@font/amiko"
            android:hint="@string/Usuario"
            android:inputType="textPersonName"
            android:textColor="@color/colorAzul_Sutil"
            android:textColorHint="@color/colorAzul_Sutil"
            android:textSize="20sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/Txt_Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:fontFamily="@font/amiko"
            android:hint="@string/Email"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorAzul_Sutil"
            android:textColorHint="@color/colorAzul_Sutil"
            android:textSize="20sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/Txt_Contra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/amiko"
            android:hint="@string/Contraseña"
            android:inputType="textPassword"
            android:textColor="@color/colorAzul_Sutil"
            android:textColorHint="@color/colorAzul_Sutil"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/Txt_Contra_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:fontFamily="@font/amiko"
            android:hint="@string/CContraseña"
            android:inputType="textPassword"
            android:textColor="@color/colorAzul_Sutil"
            android:textColorHint="@color/colorAzul_Sutil"
            android:textSize="20sp"
            android:textStyle="bold" />


    </fragment>


</LinearLayout>


